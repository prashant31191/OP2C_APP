<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    
    >

    <Button
        android:id="@+id/bton_remove"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        
        android:background="@drawable/webdas_del"
        android:text="" />

    <ImageView
        android:layout_marginBottom="3dp"
        android:id="@+id/pict_media"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/pict_live"
        android:layout_alignWithParentIfMissing="true"
        android:layout_toRightOf="@+id/bton_remove"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/text_title"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/pict_clock"
        android:layout_alignBottom="@+id/pict_media"
        android:layout_toRightOf="@+id/pict_media"
        android:textSize="14dp"
        android:textColor="#333333"
        android:text="TextView" />

    
    
    <TextView
        android:layout_marginRight="10dp"
        android:id="@+id/text_owner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_alignBottom="@+id/text_title"
		android:layout_alignTop="@+id/text_like_count"
        android:layout_toLeftOf="@+id/pict_heart"
        android:textSize="11dp"
        android:text="姓名" />
    
    
    
    <ImageView
        android:id="@+id/pict_heart"
        android:layout_marginRight="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_alignBottom="@+id/pict_live"
		android:layout_alignTop="@+id/text_like_count"
        android:layout_toLeftOf="@+id/text_like_count"
        android:src="@drawable/webdas_item_icon_like" />
    
    
    <TextView
        android:id="@+id/text_like_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/pict_live"
        android:layout_toLeftOf="@+id/pict_live"
        android:textSize="11dp"
        android:textColor="#E41B17"
        android:text="42" />

    <ImageView
        android:id="@+id/pict_clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/pict_media"
        android:layout_below="@+id/pict_media"
        android:src="@drawable/webdas_item_icon_clock" />

    <TextView
        android:id="@+id/text_clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/pict_clock"
        android:layout_alignBottom="@+id/pict_clock"
        android:layout_toRightOf="@+id/pict_clock"
        android:textSize="10dp"
        android:text="10/26, 15:35" />

    <ImageView
        android:id="@+id/pict_countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignTop="@+id/pict_clock"
        android:layout_alignBottom="@+id/pict_clock"
        android:layout_toLeftOf="@+id/text_countdown"
        android:src="@drawable/webdas_item_icon_hour" />

    <TextView
        android:id="@+id/text_countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/pict_clock"
        android:layout_alignBottom="@+id/pict_clock"
        android:layout_alignParentRight="true"
        android:textSize="10dp"
        android:text="分享倒數02H30m15s" />

    <LinearLayout
        android:layout_below="@+id/text_countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true" 
        
        >

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/imgUnread"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/webdas_item_icon_read" />

        <TextView
            
            android:id="@+id/txtRead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="11dp"
            android:textColor="#000000"
            android:text="" />
    </LinearLayout>

     <ImageView
        android:id="@+id/pict_live"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/text_countdown"
        android:src="@drawable/webdas_live_red" />

</RelativeLayout>